{
  "name": "@vscode-extensions/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "VSCode Extensions Monorepo",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r run compile",
    "watch": "pnpm -r --parallel run watch",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "check-types": "pnpm -r run check-types",
    "package": "pnpm -r run package",
    "clean": "pnpm -r exec rimraf dist out",
    "install-all": "./install-all.sh",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\""
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
