{
  "name": "@vscode-extensions/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "VSCode Extensions Monorepo",
  "scripts": {
    "build": "pnpm -r run compile",
    "watch": "pnpm -r --parallel run watch",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "check-types": "pnpm -r run check-types",
    "package": "pnpm -r run package",
    "clean": "pnpm -r exec rimraf dist out"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
